{
	"parser": "babel-eslint",
	"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module",
			"ecmaFeatures": {
					"jsx": true
			}
	},
	"plugins": [
		"react"
	],
	"rules": {
		"arrow-parens": [2, "always"],
		"comma-dangle": [2, "never"],
		"eol-last": 2,
		"no-dupe-keys": 2,
		"one-var-declaration-per-line": [2, "always"],
		"quotes": [2, "single", "avoid-escape"],
		"semi": [2, "always"]
	}
}
